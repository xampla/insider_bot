# Alpaca Trading API Configuration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live trading

# Database Configuration
DATABASE_PATH=insider_trading_bot.db

# SEC Data Configuration
SEC_USER_AGENT="YourCompany contact@yourcompany.com"  # Required by SEC
SEC_CHECK_INTERVAL=300  # Check interval in seconds (5 minutes)

# Trading Configuration
MAX_DAILY_TRADES=10
MAX_POSITION_PCT=0.05  # Maximum 5% of portfolio per position
DRY_RUN=true  # Set to false for live trading
MARKET_OPEN_DELAY=15  # Wait 15 minutes after market open
END_OF_DAY_EXIT=true  # Close all positions at end of day

# Logging Configuration
LOG_LEVEL=INFO