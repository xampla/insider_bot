[Unit]
Description=Insider Trading Bot - Automated SEC Form 4 Analysis
After=network-online.target
Wants=network-online.target
StartLimitIntervalSec=60
StartLimitBurst=3

[Service]
Type=simple
User=xavi
Group=xavi
WorkingDirectory=/home/xavi/Documents/projectes/insider_bot
Environment=PATH=/home/xavi/Documents/projectes/insider_bot/insider_bot_env/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=VIRTUAL_ENV=/home/xavi/Documents/projectes/insider_bot/insider_bot_env
EnvironmentFile=/home/xavi/Documents/projectes/insider_bot/.env
ExecStart=/home/xavi/Documents/projectes/insider_bot/insider_bot_env/bin/python main.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGTERM
TimeoutSec=30

# Restart configuration
Restart=always
RestartSec=10
RestartPreventExitStatus=2

# Security settings
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/home/xavi/Documents/projectes/insider_bot
PrivateTmp=yes

# Logging
StandardOutput=append:/home/xavi/Documents/projectes/insider_bot/logs/service.log
StandardError=append:/home/xavi/Documents/projectes/insider_bot/logs/service.log
SyslogIdentifier=insider-bot

# Resource limits
MemoryLimit=1G
CPUQuota=50%

[Install]
WantedBy=multi-user.target